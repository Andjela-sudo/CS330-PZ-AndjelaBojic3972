<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_click"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/MainBack"

    android:weightSum="6">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:foreground="?attr/selectableItemBackground"
        android:padding="12dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_name_adapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="naziv materijala"
            android:textColor="@color/text_color_dark"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/item_category_adapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_secondary"
            android:text="kategorija"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:padding="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_kolicina_adapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_secondary"
            android:text="45" />

        <TextView
            android:id="@+id/item_cena_adapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:text="500 din"
            android:textColor="@color/text_color_secondary" />
    </LinearLayout>


</LinearLayout>